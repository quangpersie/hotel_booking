    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js"
        integrity="sha384-+sLIOodYLS7CIrQpBjl+C7nPvqq+FbNUBDunl/OZv93DB7Ln/533i8e/mZXLi/P+"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flatpickr/4.2.3/flatpickr.js"></script>
    <title>{{title}}</title>
</head>

<body onload="activeRoute()">
    <div class="app">
        {{{body}}}
    </div>

    <script>
        function activeRoute() {
            let path = location.href
            let anchor = path.substring(path.lastIndexOf(":") + 1)
            anchor = anchor.substring(anchor.indexOf('/'))

            if(anchor === '/') {
                $('#home-route').addClass("active");
            } else if(anchor === '/?about=true') {
                $('#about-route').addClass("active");
            } else if(anchor === '/?simg=true') {
                $('#some-img').addClass("active");
            } else if(anchor === '/service/history-booking') {
                $('#history-route').addClass("active");
            }
        }

        function scrollToSomeImages() {
            let path = location.href
            let anchor = path.substring(path.lastIndexOf(":") + 1)
            anchor = anchor.substring(anchor.indexOf('/'))
            
            if(anchor == '/') {
                document.getElementById('some-images').scrollIntoView();
                $('#home-route').removeClass("active")
                $('#about-route').removeClass("active")
                $('#some-img').addClass("active");
            } else {
                location.href = '/?simg=true'
            }
        }

        function scrollToAboutUs() {
            let path = location.href
            let anchor = path.substring(path.lastIndexOf(":") + 1)
            anchor = anchor.substring(anchor.indexOf('/'))
            
            if(anchor == '/') {
                document.getElementById('about-us').scrollIntoView();
                $('#home-route').removeClass("active")
                $('#some-img').removeClass("active")
                $('#about-route').addClass("active");
            } else {
                location.href = '/?about=true'
            }
        }
    </script>
</body>

</html>