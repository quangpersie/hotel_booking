{{> header}}
<style>
    #pwd {
        padding-right: 32px;
    }

    .bg_icon {
        display: flex;
        align-items: center;
        position: absolute;
        right: 10px;
        top: 12px;
        z-index: 100;
    }

    .mic {
        font-size: 18px;
    }
</style>
<div class="content-pwdrecovey">
    <div class="container-fgpwd">
        <p class="title-fgpwd">RESET PASSWORD</p>
        <p class="subtitle-fgpwd">Please type your new password for Email:</p>
        <p class="subtitle-fgpwd"><b>{{email}}</b></p>
        <form class="fill-place-fgpwd" method="post" action="/user/reset-password">
            <input type="hidden" value="{{email}}" name="email">
            <input type="hidden" value="{{token}}" name="token">
            <div>
                <label class="text-title-form" for="pwd">New Password</label><br>
                <div style="position: relative;padding-top: 0;">
                    <input id="pwd" class="site-ui-input" type="password" placeholder="New password" name="password"
                        value="{{password}}">
                    <div class="bg_icon" style="padding-top: 0;"><i class="far fa-eye mic"></i></div>
                </div>
            </div>
            <div style="text-align: center;">
                <button class="btn-fgpwd" type="submit">
                    <p style="color: #FFFFFF; margin: 0;">Update Password</p>
                </button>
            </div>
        </form>
    </div>
</div>
<script>
    $('#modalToken').modal('show')

    $('.mic').click(function () {
        if ($(this).attr('class').includes('far fa-eye mic')) {
            $(this).attr('class', 'far fa-eye-slash mic')
            $('#pwd').attr('type', 'text');
        } else {
            $(this).attr('class', 'far fa-eye mic')
            $('#pwd').attr('type', 'password');
        }
    })
</script>